<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />
    <link rel="stylesheet" href="./global.css" />
    <link rel="stylesheet" href="./index.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600&display=swap"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body onload="getCurrentDate(); updateDate(); changeColor(); goToBrowseHomePage(); goToStaticHomePage(); goToHomePage(); initializeChart(); closePopup()">
    <form class="home-page">
        <div class="sidebar">
        <div class="title-wrapper">
            <div class="title">Administration web</div>
        </div>
        <div class="menu-item-parent">
            <div class="menu-item">
            <div class="functions">Functions</div>
            </div>
            <div class="functionframe">
              <div class="menu-item1">
                <img class="home-icon" alt="" src="/img/homeicon.gif" />
  
                <div class="home">Home</div>
              </div>
              <div class="menu-item2">
                <img class="search-icon" alt="" src="/img/searchicon.gif" />
  
                <div class="browse">Browse</div>
              </div>
              <div class="menu-item3">
                <img class="radio-icon" alt="" src="/img/statisticicon.gif" />
                <div class="static" >Statistic</div>
              </div>
            </div>
        </div>
        </div>
      <section class="home-page-inner">
        <div class="card-header-parent">
          <header class="card-header">
            <div class="content">
              <div class="text-and-supporting-text">
                <div class="text-and-badge">
                  <div class="text">Welcome back, Admin</div>
                  <div class="badge">
                    <div class="badge-base">
                      <div class="text1">Date: <span id="current-date"></span></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </header>
        </div>
      <div class="hotel-statistic-ranking-container">  
        <div class="input2">
          <img class="search-icon2" alt="" src="/img/searchicon.gif" onclick="showPopupSearch()" />
          <input class="search2" placeholder="Check total payment for customers" type="text"/>
        </div>
        <div class="payment-button" onclick="showPopup('PaymentPopup')">Payment</div>
      </div>
      
      <div class="hotel-statistic-ranking-container">
        <div class="Hotel-statistic-ranking">
          <div class="hotel-statistic-header">
            <span class="hotel-statistic-title">HOTEL STATISTIC</span>
            <div class="hotel-statistic-year-selector">
              <button type="button" onclick="changeYear2(-1)">&#9664;</button>
              <span id="hotel-statistic-year">2024</span>
              <button type="button" onclick="changeYear2(1)">&#9654;</button>
            </div>
            <div class="hotel-statistic-date-selector">
              <select id="hotel-statistic-date-selector" onchange="updateHotelStatistic(this.value)">
                <option value="today">Today</option>
                <option value="week">Week</option>
                <option value="month">Month</option>
                <option value="year">Year</option>
              </select>
            </div>
          </div>
          <div class="statistic-item">
            <img class="icon" src="/img/icon_booking.png" alt="Bookings Icon" />
            <span class="label">Bookings</span>
            <span class="value bookings"></span>
            <img class="info-icon" src="/img/info.png" alt="Info Icon" onclick="showPopup('HotelStatisticBooking')" />
          </div>
          <div class="statistic-item">
            <img class="icon" src="/img/icon _person.png" alt="Customers Icon" />
            <span class="label">Customers</span>
            <span class="value customers"></span>
            <img class="info-icon" src="/img/info.png" alt="Info Icon" onclick="showPopup('HotelStatisticCustomer')" />
          </div>
          <div class="statistic-item">
            <img class="icon" src="/img/icon_room.png" alt="Rooms Icon" />
            <span class="label">Rooms</span>
            <span class="value rooms"></span>
            <img class="info-icon" src="/img/info.png" alt="Info Icon" onclick="showPopup('HotelStatisticRoom')" />
          </div>
        </div>
        <div class="ranking-service">
          <div class="ranking-service-header">
            <span class="ranking-service-title">RANKING SERVICE</span>
            <img class="info-icon" src="/img/info.png" alt="Info Icon" onclick="showPopup('RankingServiceInfo')" />
          </div>
          <table class="ranking-service-table">
            <tr>
              <td>1. Spa</td>
              <td>234</td>
            </tr>
            <tr>
              <td>2. Laundry</td>
              <td>196</td>
            </tr>
            <tr>
              <td>3. Massage</td>
              <td>123</td>
            </tr>
            <tr>
              <td>4. Buffet breakfast</td>
              <td>99</td>
            </tr>
            <tr>
              <td>5. Pool</td>
              <td>98</td>
            </tr>
          </table>
        </div>
      </div>
      <div class="hotel-statistic-ranking-container">
        <div class="chart-container">
          <div class="chart-header">
            <span class="chart-title">REVENUE</span>
            <div class="chart-year-selector">
              <button type="button" onclick="changeYear1(-1)">&#9664;</button>
              <span id="chart-year">2024</span>
              <button type="button" onclick="changeYear1(1)">&#9654;</button>
            </div>
            <div class="chart-date-selector">
              <select id="chart-date-selector" onchange="updateChart(this.value)">
                <option value="today">Today</option>
                <option value="week">Week</option>
                <option value="month">Month</option>
                <option value="year">Year</option>
              </select>
            </div>
          </div>
          <canvas id="myChart"></canvas>
        </div>
        <div class="ranking-service">
          <div class="ranking-service-header">
            <span class="ranking-service-title">RANKING CUSTOMERS</span>
            <img class="info-icon" src="/img/info.png" alt="Info Icon" onclick="showPopup('RankingCustomersInfo')" />
          </div>
          <table class="ranking-service-table">
            <tr>
              <td>1. John Doe</td>
              <td>15</td>
              </tr>
            </tr>
            <tr>
              <td>2. Jane Smith</td>
              <td>12</td>
            </tr>
            <tr>
              <td>3. Alice Johnson</td>
              <td>10</td>
            </tr>
            <tr>
              <td>4. Robert Brown</td>
              <td>8</td>
            </tr>
            <tr>
              <td>5. Emily Davis</td>
              <td>7</td>
            </tr>
          </table>
        </div>
      </div>
      </section>
    </form>

    <div id="overlay" class="overlay" onclick="closePopup()"></div>

    <div id="HotelStatisticBooking" class="popup popup-booking">
      <div class="HS-popup-content">
        <div class="popup-header">
          <span>Booking</span>
          <span class="close" onclick="closePopup()">&times;</span>
        </div>
        <input type="date" id="HS-booking-date" class="input-style" onchange="updateValue('bookings', this.value)">
        <div id="booking-value-display"></div>
      </div>
    </div>

    <div id="HotelStatisticCustomer" class="popup popup-customer">
      <div class="HS-popup-content">
        <div class="popup-header">
          <span>Customer</span>
          <span class="close" onclick="closePopup()">&times;</span>
        </div>
        <input type="date" id="HS-customer-date" class="input-style" onchange="updateValue('customers', this.value)">
        <div id="customer-value-display"></div>
      </div>
    </div>

    <div id="HotelStatisticRoom" class="popup popup-room">
      <div class="HS-popup-content">
        <div class="popup-header">
          <span>Room</span>
          <span class="close" onclick="closePopup()">&times;</span>
        </div>
        <input type="date" id="HS-room-date" class="input-style" onchange="updateValue('rooms', this.value)">
        <div id="room-value-display"></div>
      </div>
    </div>

    <div id="TotalBillPopup" class="popup large-popup popup-total-bill">
      <div class="HS-popup-content">
        <div class="popup-header">
          <div class="total-bill-container">
            <span>Total Bill:</span>
            <span id="total-bill-value"></span>
          </div>
          <span class="close" onclick="closePopup()">&times;</span>
        </div>
        <div class="popup-body">
          <div class="popup-column">
           
          </div>
          <div class="popup-column">
            
          </div>
        </div>
        <div class="popup-footer">
          <span>Total amount:</span>
          <span id="total-amount-value" class="total-amount-value">0</span>
        </div>
      </div>
    </div>

    <div id="RankingServiceInfo" class="popup large-popup popup-total-bill">
      <div class="HS-popup-content">
        <div class="popup-header">
          <span>All Ranking Service</span>
          <span class="close" onclick="closePopup()">&times;</span>
        </div>
        <div class="popup-body">
          <div class="popup-column">
            
          </div>
          <div class="popup-column">
            
          </div>
        </div>
      </div>
    </div>

    <div id="RankingCustomersInfo" class="popup large-popup popup-total-bill">
      <div class="HS-popup-content">
        <div class="popup-header">
          <span>All Ranking Customers</span>
          <span class="close" onclick="closePopup()">&times;</span>
        </div>
        <div class="popup-body">
          <div class="popup-column">
            
          </div>
          <div class="popup-column">
            
          </div>
        </div>
      </div>
    </div>

    <div id="PaymentPopup" class="popup large-popup popup-total-bill">
      <div class="HS-popup-content">
        <div class="popup-header">
          <span>Payment</span>
          <span class="close" onclick="closePopup()">&times;</span>
        </div>
        <div class="popup-body">
          <div class="popup-column">
            <p>Booking ID:</p>
            <p>Total Amount:</p>
            <p>Additional Charge:</p>
            <p>Payment Method:</p>
            <p>Payment Date:</p>
            <p>Payment Status:</p>
            <p>Note:</p>
          </div>
          <div class="popup-column">
            <input type="text" id="bookingid" class="input-style">
            <input type="text" id="totalamount" class="input-style">
            <input type="text" id="additionalcharge" class="input-style">
            <input type="text" id="paymentmethod" class="input-style">
            <input type="text" id="paymentdate" class="input-style">
            <input type="text" id="paymentstatus" class="input-style">
            <input type="text" id="note" class="input-style">
          </div>
        </div>
        <button type="submit" class="submit">Submit</button>
      </div>
    </div>

    <script src="main.js"></script>
  </body>
</html>