<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />
    <link rel="stylesheet" href="./global.css" />
    <link rel="stylesheet" href="./index.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600&display=swap"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body onload="getCurrentDate(); updateDate(); changeColor(); goToBrowseHomePage(); goToStaticHomePage(); goToHomePage(); initializeChart()">
    <form class="home-page">
        <div class="sidebar">
        <div class="title-wrapper">
            <div class="title">Administration web</div>
        </div>
        <div class="menu-item-parent">
            <div class="menu-item">
            <div class="functions">Functions</div>
            </div>
            <div class="functionframe">
            <div class="menu-item1">
                <img class="home-icon" alt="" src="/img/home.png" />

                <div class="home">Home</div>
            </div>
            <div class="menu-item2">
                <img class="search-icon" alt="" src="/img/search.png" />

                <div class="browse">Browse</div>
            </div>
            <div class="menu-item3">
                <img class="radio-icon" alt="" src="/img/static.png" />
                <div class="static" >Statistic</div>
            </div>
            </div>
        </div>
        </div>
      <section class="home-page-inner">
        <div class="card-header-parent">
          <header class="card-header">
            <div class="content">
              <div class="text-and-supporting-text">
                <div class="text-and-badge">
                  <div class="text">Welcome back, Admin</div>
                  <div class="badge">
                    <div class="badge-base">
                      <div class="text1">Date: <span id="current-date"></span></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </header>
        </div>
        <div class="input2">
          <img class="search-icon2" alt="" src="/Assets/search.png" />
          <input class="search2" placeholder="Check total payment for customers" type="text"/>
        </div>

        <div class="Hotel-statistic-ranking">
          <div class="hotel-statistic-header">
            <span class="hotel-statistic-title">HOTEL STATISTIC</span>
            <div class="hotel-statistic-year-selector">
              <button type="button" onclick="changeYear2(-1)">&#9664;</button>
              <span id="hotel-statistic-year">2024</span>
              <button type="button" onclick="changeYear2(1)">&#9654;</button>
            </div>
            <div class="hotel-statistic-date-selector">
              <select id="hotel-statistic-date-selector" onchange="updateHotelStatistic(this.value)">
                <option value="today">Today</option>
                <option value="week">Week</option>
                <option value="month">Month</option>
                <option value="year">Year</option>
              </select>
            </div>
          </div>
          <div class="statistic-item">
            <img class="icon" src="/Assets/icon_booking.png" alt="Bookings Icon" />
            <span class="label">Bookings</span>
            <span class="value bookings">98</span>
            <img class="info-icon" src="/Assets/info.png" alt="Info Icon" onclick="showPopup('HotelStatisticBooking')" />
          </div>
          <div class="statistic-item">
            <img class="icon" src="/Assets/icon _person.png" alt="Customers Icon" />
            <span class="label">Customers</span>
            <span class="value customers">120</span>
            <img class="info-icon" src="/Assets/info.png" alt="Info Icon" onclick="showPopup('HotelStatisticCustomer')" />
          </div>
          <div class="statistic-item">
            <img class="icon" src="/Assets/icon_room.png" alt="Rooms Icon" />
            <span class="label">Rooms</span>
            <span class="value rooms">98</span>
            <img class="info-icon" src="/Assets/info.png" alt="Info Icon" onclick="showPopup('HotelStatisticRoom')" />
          </div>
        </div>

        <div class="chart-container">
          <div class="chart-header">
            <span class="chart-title">REVENUE</span>
            <div class="chart-year-selector">
              <button type="button" onclick="changeYear1(-1)">&#9664;</button>
              <span id="chart-year">2024</span>
              <button type="button" onclick="changeYear1(1)">&#9654;</button>
            </div>
            <div class="chart-date-selector">
              <select id="chart-date-selector" onchange="updateChart(this.value)">
                <option value="today">Today</option>
                <option value="week">Week</option>
                <option value="month">Month</option>
                <option value="year">Year</option>
              </select>
            </div>
          </div>
          <canvas id="myChart"></canvas>
      </section>
    </form>
    <script src="main.js"></script>
  </body>
</html>